<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/primaryTextColor"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/l11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_cusview_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/txt_cusview_cusid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CUSID"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_cusview_addr"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:text="addressfdjjfdjh j  hfdhhfdjfdj  ffh hrug jhrgkjk  hrg  hdfhjhdfh hfd j" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l34"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l23"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_cusview_city"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:text="City" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text=" - " />

                    <TextView
                        android:id="@+id/txt_cusview_pincode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="pincode" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l34"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_cusview_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx" />

                    <TextView
                        android:id="@+id/txt_cusview_profedit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Edit"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_cusdes_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No Loan Avaliable"
                android:textAlignment="center"
                android:textAllCaps="false" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/listView_loan"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="end"
                    android:background="@color/colorPrimary"
                    android:text="Get Direction"
                    android:textAllCaps="false"
                    android:textColor="@color/primaryTextColor" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>