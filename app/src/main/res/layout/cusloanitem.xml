<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <LinearLayout
            android:id="@+id/l45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/primaryTextColor"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/l43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Total Loan Amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_totloanamt"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="0000000" />

                <TextView
                    android:id="@+id/cus_loanId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="LOANxxx"
                    android:textAlignment="viewEnd" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l46"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Loan Option " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_loanoption"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Select options" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l47"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Loan Duration" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_loanduration"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l48"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Strart Date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l49"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="End Date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Paid Amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_loanpaid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l511"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l51"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Balance Amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_loanbal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l511"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_duedate_txt"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Current Due Date" />

                <TextView
                    android:id="@+id/txt_cusview_loancurrentdat_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_loancurrentdate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l43"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_dueamt_txt"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Current Due Amount " />

                <TextView
                    android:id="@+id/txt_cusview_loanamt_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txt_cusview_loanamt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000000" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_cusview_viewschedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="View Schedule"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>